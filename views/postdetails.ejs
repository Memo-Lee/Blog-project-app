<%- include('partials/_header.ejs') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation.ejs') -%>
  
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Blog</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
        <div class="row mb-5 pb-5">
            <div class="col-xl-8 col-lg-7">
                <!-- Video description -->
                <div class="tm-video-description-box">
                    <img src="<%= post.image %>" alt="Image" class="img-fluid tm-catalog-item-img">
                    <h2 class="mb-5 tm-video-title"><%= post.title %></h2>
                    <p class="mb-4"><%= post.description %></p>	
                </div>							
            </div>
            <div class="col-xl-4 col-lg-5">
                <!-- Share box -->
                <div class="tm-bg-gray tm-share-box">
                    <div class="text-center">
                        <a class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Details</span></a>	
                    </div>	
                    <div class="text-center">
                        <a class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download"><span>Delete Photo</span></a>	
                    </div>								
                </div>
            </div>
        </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer.ejs') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
