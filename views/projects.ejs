    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <% projects.forEach(element => { %>
            <div class="col-lg-12">
                <div class="card mb-3">
                  <a href="/projects/<%= element._id %>">
                    <img class="card-img-top" src="<%= element.image %>" alt="Card image cap">
                  </a>
                  <div class="card-body">
                    <h5 class="card-title"><%= element.title %></h5>
                    <p class="card-text"><%= element.description %></p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                  </div>
                </div>
          </div>
          <% }) %>
        </div>
      </div>
    </article>

  <hr>
  <!-- Pagitation -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <nav aria-label="Page navigation example d-flex">
          <% if(pages > 0) { %>
            <ul class="pagination  mx-auto justify-content-center">
              <% for(i=1; i<=pages; i++) { %>
                  <% if (i == current) { %>
                    <li class="page-item active"><a class="page-link" href="/projectspage/?page=<%= i %>"><%= i %></a></li>
                  <% } else if (i < pages) { %>
                    <li class="page-item"><a class="page-link" href="/projectspage/?page=<%= i %>"><%= i %></a></li>
                  <% } else { %>
                    <li class="page-item"><a class="page-link" href="/projectspage/?page=<%= i %>">></a></li>
                  <% } %>
              <% } %>
            </ul>
          <% } %>
        </nav>
      </div>
    </div>
  </div>
  <hr>
  <!-- Footer -->
  <%- include('partials/_footer.ejs') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

