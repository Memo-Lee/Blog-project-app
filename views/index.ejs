<%- include('partials/_header.ejs') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Home</h1>
            <span class="subheading">Mehmet SÃ¶nmez</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-12 mx-auto">
          <h2 class="text-center">Last shared blogs</h2>
          <hr>
          <% posts.forEach(element => { %>

            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="<%=element.image%>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= element.title %></h5>
                <p class="card-text"><%= element.description %></p>
                <a href="/posts/<%=element._id%>" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>

          <% }) %>

        </div>
        
        <div class="col-lg-6 col-md-12 mx-auto">
          <h2 class="text-center">Last shared projects</h2>
          <hr>
          <% projects.forEach(element => { %>

            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="<%=element.image%>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= element.title %></h5>
                <p class="card-text"><%= element.description %></p>
                <a href="/projects/<%=element._id%>" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>

          <% }) %>

        </div>
    </div>
    <hr>
  </div>

    <!-- Pager -->
  <div class="clearfix">
    <a class="btn btn-primary float-right" href="/post">Older Posts &rarr;</a>
  </div>
  <hr>


  <%- include('partials/_footer.ejs') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
